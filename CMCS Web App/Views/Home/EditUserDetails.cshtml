@model CMCS_Web_App.Models.User;
@{
    ViewData["Title"] = "Edit User Details";
}

<div class="page">
    <div class="wrapper">
        <div class="details-box">
            <h1>Edit User Details</h1>
            <p>View and edit user details below.</p>
            <form asp-controller="Home" asp-action="SaveChanges" method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="input-box">
                    <input type="text" asp-for="FirstName" value="@Model.FirstName" required />
                    <label>First Name</label>
                </div>
                <div class="input-box">
                    <input type="text" asp-for="Surname" value="@Model.Surname" required />
                    <label>Last Name</label>
                </div>
                <div class="input-box">
                    <input type="email" asp-for="Email" value="@Model.Email" required />
                    <label>Email</label>
                </div>
                <div class="input-box">
                    <input type="text" asp-for="ContactNumber" value="@Model.ContactNumber" required />
                    <label>Contact Number</label>
                </div>
                <div class="input-box">
                    <input type="text" asp-for="Faculty" value="@Model.Faculty" required />
                    <label>Faculty</label>
                </div>
            
                <button class="update-user" type="submit">Save Changes</button>
            </form>
        </div>
    </div>
</div>