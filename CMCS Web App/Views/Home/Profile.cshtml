@model CMCS_Web_App.Models.User;
@{
    ViewData["Title"] = "Profile";
}

<div class="page">
    <div class="wrapper">
        <div class="form-box">
            <h1>Profile</h1>
            <p>Update your profile details.</p>
            <form asp-controller="Home" asp-action="Profile" method="post">
                <div class="input-box">
                    <input type="text" name="FirstName" value="@Model.FirstName" required />
                    <label>First Name</label>
                </div>

                <div class="input-box">
                    <input type="text" name="LastName" value="@Model.Surname" required />
                    <label>Last Name</label>
                </div>

                <div class="input-box">
                    <input type="email" name="Email" value="@Model.Email" required />
                    <label>Email</label>
                </div>

                <div class="input-box">
                    <input type="password" name="Password" required />
                    <label>Password</label>
                </div>

                <button class="btn" type="submit">Update</button>

                @if (TempData["UpdateFailed"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["UpdateFailed"]
                    </div>
                }
            </form>
        </div>
    </div>
</div>