@{
    ViewData["Title"] = "Register";
}

<div class="page">
    <div class="wrapper">
        <div class="form-box">
            <h1>Register as Lecturer</h1>
            <div class="input-box">
                <input type="text" required />
                <label>Email</label>
            </div>

            <div class="input-box">
                <input type="text" required />
                <label>First Name</label>
            </div>

            <div class="input-box">
                <input type="text" required />
                <label>Surname</label>
            </div>

            <div class="input-box">
                <input type="text" required />
                <label>Faculty</label>
            </div>

            <div class="input-box">
                <input type="password" required />
                <label>Password</label>
            </div>

            <button class="btn" type="submit">Register</button>

        </div>
    </div>
</div>
